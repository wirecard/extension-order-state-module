{
  "name": "wirecard/extension-order-state-module",
  "description": "Module used in shop extentions decide the state of an order",
  "license": "MIT",
  "require": {
    "php": ">=5.6"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.*",
    "phpunit/phpunit": "^5.7",
    "phpmd/phpmd": "@stable"
  },
  "scripts": {
    "cs-check": "./vendor/bin/phpcs --standard=./phpcs.xml ./src",
    "cs-fix": "./vendor/bin/phpcbf --standard=./phpcs.xml ./src",
    "test": "./vendor/bin/phpunit --colors ./tests",
    "md": "./vendor/bin/phpmd ./src/ text cleancode,codesize,controversial,design,naming,unusedcode"
  },
  "autoload": {
    "psr-4": {
      "Wirecard\\Order\\State\\": "src/"
    }
  }
}
