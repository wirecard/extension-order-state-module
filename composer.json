{
  "name": "wirecard/extension-order-state-module",
  "description": "Module used in shop extentions decide the state of an order",
  "license": "MIT",
  "require": {
    "php": ">=5.6"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.*",
    "phpunit/phpunit": "^5.7",
    "phpmd/phpmd": "@stable",
    "phpmetrics/phpmetrics": "^2.6"
  },
  "scripts": {
    "cs-check": "./vendor/bin/phpcs --standard=./phpcs.xml ./src",
    "cs-fix": "./vendor/bin/phpcbf --standard=./phpcs.xml ./src",
    "test": "./vendor/bin/phpunit --colors ./tests",
    "md": "./vendor/bin/phpmd ./src/ text cleancode,codesize,controversial,design,naming,unusedcode",
    "cov": "./vendor/bin/phpunit --colors --log-junit log-junit.xml --coverage-html report-coverage --whitelist src/ tests/",
    "metrics": "./vendor/bin/phpmetrics --report-html=report-metrics --git --junit=./log-junit.xml src/"
  },
  "autoload": {
    "psr-4": {
      "Wirecard\\Order\\State\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": { "": "tests/doubles/" }
  }
}
